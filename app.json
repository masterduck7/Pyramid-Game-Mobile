{
  "expo": {
    "name": "Pyramid Drink",
    "description": "Pyramid drinking game",
    "slug": "pyramid",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.3.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/Layout.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lpsoftware.pyramid",
      "buildNumber": "1.3.1"
    },
    "android": {
      "versionCode": 2,
      "package": "com.lpsoftware.pyramid_drink",
      "permissions": [
        "MANAGE_DOCUMENTS",
        "READ_EXTERNAL_STORAGE",
        "WAKE_LOCK",
        "WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}
